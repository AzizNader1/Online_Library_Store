
<style>
    body {
        background-color: #263238; /* Blue Gray background */
        color: #eceff1; /* Light Blue Gray text color */
        font-family: 'Arial', sans-serif; /* Change the font family as needed */
    }
    .header {
        background-color: #333;
        color: #fff;
        text-align: center;
        padding: 20px;
    }

    .container {
        max-width: 1200px;
        margin: 20px auto;
        padding: 0 20px;
    }

    .book-images {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        margin-top: 20px;
    }

        .book-images img {
            width: 200px;
            height: 250px;
            margin: 10px;
            border-radius: 5px;
            transition: transform 0.3s ease-in-out;
        }

            .book-images img:hover {
                transform: scale(1.1);
            }
</style>

<body>
    <div class="header">
        <h1>Welcome to Our Library</h1>
        <p>Explore a world of knowledge</p>

    </div>
    <div class="container">
        <div class="book-images">
            <h4 style="margin-top:10%">
                Inside this Library you can see all the books you are looking for <br />
                You can buy any book you can and also you can borrow it <br />
                now you can start you trip @Html.ActionLink("Start", "Login", "User")
            </h4>
            <img src="~/biblioteka.png" alt="Book 1">
        </div>
    </div>
</body>